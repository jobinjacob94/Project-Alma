<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jobinjacob.visitmego.Details">

    <TextView
        android:text="VisitMeGo!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/visitmego"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="528dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="528dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        tools:layout_editor_absoluteY="240dp"
        tools:layout_editor_absoluteX="535dp"
        android:hint="YOUR FULL NAME"
        android:id="@+id/nameText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        tools:layout_editor_absoluteY="323dp"
        tools:layout_editor_absoluteX="533dp"
        android:id="@+id/emailText"
        android:hint="YOUR EMAIL ADDRESS" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        tools:layout_editor_absoluteY="402dp"
        tools:layout_editor_absoluteX="532dp"
        android:id="@+id/companyText"
        android:hint="COMPANY" />

    <AutoCompleteTextView
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="476dp"
        tools:layout_editor_absoluteX="532dp"
        android:id="@+id/autoCompleteTextView"
        android:hint="HOST" />

    <Button
        android:text="CONTINUE "
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="594dp"
        tools:layout_editor_absoluteX="538dp"
        android:id="@+id/continueButton"
        style="@style/Widget.AppCompat.Button.Colored" />

</android.support.constraint.ConstraintLayout>
