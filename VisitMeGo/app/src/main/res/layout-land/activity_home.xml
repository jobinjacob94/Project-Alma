<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jobinjacob.visitmego.Home">

    <TextView
        android:text="VisitMeGo!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/visitmego"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="512dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="112dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="512dp" />

    <Button
        android:text="Tap to sign in >"
        android:layout_width="572dp"
        android:layout_height="138dp"
        android:id="@+id/tapButton"
        style="@style/Widget.AppCompat.Button.Colored"
        tools:layout_editor_absoluteX="359dp"
        tools:layout_editor_absoluteY="294dp"
        android:textSize="30sp" />

    <Button
        android:text="Sign In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="556dp"
        tools:layout_editor_absoluteX="395dp"
        android:id="@+id/signInButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textSize="30sp" />

    <Button
        android:text="Been here before?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="556dp"
        tools:layout_editor_absoluteX="614dp"
        android:id="@+id/oldUserButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textSize="30sp" />
</android.support.constraint.ConstraintLayout>
